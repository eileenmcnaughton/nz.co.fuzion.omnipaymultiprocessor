    "keywords": ["omnipay"],
    "homepage": "https://github.com/thephpleague/omnipay-tests",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Macneil",
            "email": "adrian@adrianmacneil.com"
        },
        {
            "name": "Barry vd. Heuvel",
